{
  "name": "coolie-auto-post-bot",
  "description": "Telegram bot to auto-send movie posts + sample videos with MongoDB",
  "repository": "https://github.com/yourusername/coolie-auto-post-bot",
  "logo": "https://telegram.org/img/t_logo.png",
  "keywords": ["telegram", "bot", "movie", "coolie", "mongodb"],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "BOT_TOKEN": {
      "description": "Your Telegram Bot Token from @BotFather",
      "required": true,
      "value": "123456789:ABCDEF_your_bot_token_here"
    },
    "OWNER_IDS": {
      "description": "Comma-separated Telegram user IDs of bot admins",
      "required": true,
      "value": "123456789,987654321"
    },
    "AUTO_DELETE_SECONDS": {
      "description": "Auto-delete messages after seconds (default 600)",
      "value": "600"
    },
    "MONGO_URI": {
      "description": "MongoDB connection URI (e.g., mongodb://localhost:27017 or Atlas URI)",
      "required": true,
      "value": "mongodb://localhost:27017"
    },
    "DB_NAME": {
      "description": "MongoDB database name",
      "value": "coolie_bot"
    },
    "COLLECTION_NAME": {
      "description": "MongoDB collection name",
      "value": "keywords"
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  }
}
